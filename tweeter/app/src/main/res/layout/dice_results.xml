<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="5dp"
    android:padding="10dp"
    android:background="@drawable/input"
    android:backgroundTint="@color/lightGray">

    <LinearLayout
        android:id="@+id/diceResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:textColor="@color/colorPrimary"
            android:text="Dice Roller"
            android:paddingBottom="15dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/skill"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingBottom="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/firstRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/secondRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/thirdRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:background="@color/white"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center">

            <Button
                android:id="@+id/rollAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/thebutton"
                android:text="Roll Again"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/closeRoller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:background="@drawable/thebutton"
                android:text="Close Roller"
                android:fontFamily="@font/montserrat_extra_bold"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"/>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>