<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/creationOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="5dp"
            android:text="Option"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:id="@+id/border1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/option"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/border1"
            android:layout_toStartOf="@id/border2"
            android:layout_centerVertical="true"
            android:text="Description"
            android:textColor="@color/black"
            android:gravity="fill_vertical"/>

        <View
            android:id="@+id/border2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/selectRace"
            android:background="@color/black"/>

        <Button
            android:id="@+id/selectRace"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/learnRace"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/lightGray"
            android:text="Select"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/learnRace"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@color/lightGray"
            android:text="learn"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

</LinearLayout>