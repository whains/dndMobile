<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <include layout="@layout/toolbar2"/>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/character_name"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/montserrat_extra_bold"/>

    <RelativeLayout
        android:id="@+id/characterSubheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/short_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Rest"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

            <Button
                android:id="@+id/long_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Rest"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

            <Button
                android:id="@+id/level_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level Up"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="1dp"
            android:layout_centerVertical="true"
            android:background="@drawable/character1"/>

    </RelativeLayout>

</LinearLayout>