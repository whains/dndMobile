<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <include layout="@layout/toolbar2"/>

    <TextView
        android:id="@+id/character_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/character_name"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/montserrat_extra_bold"/>

    <RelativeLayout
        android:id="@+id/characterSubheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/short_rest"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="Short Rest"
                android:layout_marginLeft="4dp"
                android:background="@drawable/thebutton"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

            <Button
                android:id="@+id/long_rest"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="Long Rest"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/thebutton"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

            <Button
                android:id="@+id/level_up"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/thebutton"
                android:text="Level Up"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_extra_bold"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>