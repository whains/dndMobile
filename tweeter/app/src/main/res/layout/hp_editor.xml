<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HPeditor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/input"
    android:backgroundTint="@color/lightGray"
    android:padding="5dp"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_extra_bold"
        android:layout_marginBottom="3dp"
        android:text="Changes will reset during next Long Rest"/>

    <LinearLayout
        android:id="@+id/HPwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/input">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="Hit Points"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/subtractHP"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/CurrentHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/HPchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <LinearLayout
                android:id="@+id/addHP"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tempHPwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/input"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="Temporary HP"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/subtractTemp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TemporaryHP"                   android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/tempChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <LinearLayout
                android:id="@+id/addTemp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MaxHPwindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="Maximum HP"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/subtractMax"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/MaxHP"                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/maxChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <LinearLayout
                android:id="@+id/addMax"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/resetMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="normal Max"
            android:fontFamily="@font/montserrat_medium"
            android:background="@color/lightGray"
            android:textColor="@color/white"
            android:paddingHorizontal="2dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Confirm"
            android:fontFamily="@font/montserrat_bold"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Cancel"
            android:fontFamily="@font/montserrat_bold"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>