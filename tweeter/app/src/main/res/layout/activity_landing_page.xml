<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.byu.cs.tweeter.client.view.main.LandingPageActivity">

    <include layout="@layout/toolbar"/>

    <include layout="@layout/content_landing_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/landing"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="Welcome Back"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_extra_bold"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Drax The Destroyer"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold_italic"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="10dp"
        android:text="Your Characters:"
        android:fontFamily="@font/montserrat_extra_bold"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/newCharacter"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginTop="263dp"
        android:layout_marginLeft="300dp"
        android:background="@color/colorPrimary"
        android:text="Add new character"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterRecycler"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:padding="10dp"
        android:layout_marginTop="300dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="570dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/input"
            android:elevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/compendium_intro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Compendium"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/montserrat_bold"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>