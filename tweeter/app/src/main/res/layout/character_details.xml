<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:backgroundTint="@color/lightGray"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/detailsPicture"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/circle"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/greyButtons"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat_extra_bold"
                        android:text="Jimothy the Great"
                        android:textColor="@color/colorPrimary"
                        android:textSize="35sp"/>

                    <TextView
                        android:id="@+id/detailsLevelAndClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Ranger"
                        android:textColor="@color/colorAccent"
                        android:textSize="25sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/detailsRaceBackgroundAlignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_medium"
                android:text="Level 10 Beast Master Ranger"
                android:textColor="@color/greyButtons"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:id="@+id/detailsExpandableListView"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>