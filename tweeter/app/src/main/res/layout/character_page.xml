<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characterPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/characterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/character_name"
            android:textSize="32sp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/characterSubheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/short_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Rest"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/long_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Rest"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/level_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level Up"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </LinearLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/characterContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterSubheader"
        android:layout_above="@+id/characterNavigation"/>

    <RelativeLayout
        android:id="@+id/characterNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/button1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>

            <TextView
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combat"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>

            <TextView
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>

            <TextView
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="spells"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>

            <TextView
                android:id="@+id/button5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="details"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>